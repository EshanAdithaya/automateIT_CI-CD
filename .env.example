# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# GitLab Configuration  
GITLAB_TOKEN=your_gitlab_access_token
GITLAB_WEBHOOK_SECRET=your_gitlab_webhook_secret

# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database Configuration (if needed later)
DATABASE_URL=your_database_connection_string

# Docker Configuration
DOCKER_REGISTRY_URL=your_docker_registry_url
DOCKER_REGISTRY_USERNAME=your_docker_username
DOCKER_REGISTRY_PASSWORD=your_docker_password

# CI/CD Pipeline Configuration
DEFAULT_BUILD_TIMEOUT=1800
DEFAULT_TEST_TIMEOUT=600
AUTO_DEPLOY_ENABLED=false

# Monitoring Configuration
WEBHOOK_URL=your_monitoring_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key